[Unit]

Description=Windows GnuPG Bridge

ConditionFileIsExecutable="{{ windows_gnupg_bridge_exe }}"

[Service]

Type=simple

User={{ ansible_user }}
Group={{ ansible_user }}

ExecStart="{{ windows_gnupg_bridge_exe }}"  --extra 127.0.0.1:54321

Restart=always
RestartSec=60

[Install]

WantedBy=multi-user.target
